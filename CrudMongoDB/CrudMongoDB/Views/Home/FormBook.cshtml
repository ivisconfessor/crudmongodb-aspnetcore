@model CrudMongoDB.Models.Book
@{
    ViewData["Title"] = "Cadastro Livro";
}
<h1>@ViewData["Title"]</h1>

@if (Model == null)
{
    <form asp-controller="Home" asp-action="InsertBook" method="post">
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="Name">Nome</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Nome">
            </div>
            <div class="form-group col-md-4">
                <label for="YearPublish">Ano de Publicação</label>
                <input type="number" class="form-control" id="YearPublish" name="YearPublish" placeholder="Ano de Publicação">
            </div>
        </div>
        <div class="form-group">
            <label for="Description">Sinopse</label>
            <textarea class="form-control" id="Description" name="Description" rows="5" placeholder="Escreva aqui a Sinopse do Livro..."></textarea>
        </div>
        @*<div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Clique em mim
                    </label>
                </div>
            </div>*@
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
}
else
{
    <form asp-controller="Home" asp-action="UpdateBook" method="put">
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="Name">Nome</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Nome" value="@Model.Name" disabled>
            </div>
            <div class="form-group col-md-4">
                <label for="YearPublish">Ano de Publicação</label>
                <input type="number" class="form-control" id="YearPublish" name="YearPublish" placeholder="Ano de Publicação" value="@Model.YearPublish">
            </div>
        </div>
        <div class="form-group">
            <label for="Description">Sinopse</label>
            <textarea class="form-control" id="Description" name="Description" rows="5" placeholder="Escreva aqui a Sinopse do Livro...">@Model.Description</textarea>
        </div>
        <input type="hidden" name="bookId" value="@Model.Id" />
        @*<div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Clique em mim
                    </label>
                </div>
            </div>*@
        <button type="submit" class="btn btn-primary">Atualizar Cadastro</button>
    </form>
}